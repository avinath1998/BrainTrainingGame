<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="WhiteBackground">
        <item name="android:background">@color/background</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/maintitle_text_size</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="BlueButton">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>

    <style name="BlueButtonKeyboard">
=        <item name="android:background">@drawable/btn_blue_keyboard</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>

        <item name="android:textSize">@dimen/keyboard_txtsize</item>
    </style>

    <style name="BlueButtonExit">
        <item name="android:background">@drawable/btn_white_blue_border</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="InGameAlert">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <dimen name="btn_padding">15dp</dimen>
</resources>
